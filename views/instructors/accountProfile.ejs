<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile & Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .active-tab {
            border-bottom: 2px solid black;
        }
    </style>
</head>

<body class="bg-gray-100 font-sans">
    <div class="container mx-auto mt-8">
        <div class="bg-white p-6 rounded-lg shadow-lg">

            <!-- Tabs -->
            <div class="border-b mb-6">
                <h2 class="px-6 py-2 active-tab">Profile Settings</h2>
            </div>

            <!-- Profile Form -->
            <form id="profileForm">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

                    <!-- First Name -->
                    <div>
                        <label for="firstName" class="block text-gray-700 font-semibold mb-2">First Name</label>
                        <input type="text" id="firstName" name="firstName"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label for="lastName" class="block text-gray-700 font-semibold mb-2">Last Name</label>
                        <input type="text" id="lastName" name="lastName"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Address -->
                    <div>
                        <label for="address" class="block text-gray-700 font-semibold mb-2">Address</label>
                        <input type="text" id="address" name="address"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- City -->
                    <div>
                        <label for="city" class="block text-gray-700 font-semibold mb-2">City</label>
                        <input type="text" id="city" name="city" class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Zipcode -->
                    <div>
                        <label for="zipcode" class="block text-gray-700 font-semibold mb-2">Zipcode</label>
                        <input type="text" id="zipcode" name="zipcode"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Country -->
                    <div>
                        <label for="country" class="block text-gray-700 font-semibold mb-2">Country</label>
                        <input type="text" id="country" name="country"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Phone -->
                    <div>
                        <label for="phone" class="block text-gray-700 font-semibold mb-2">Phone</label>
                        <input type="text" id="phone" name="phone" class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- School or Company Name -->
                    <div>
                        <label for="schoolOrCompanyName" class="block text-gray-700 font-semibold mb-2">School or
                            Company Name</label>
                        <input type="text" id="schoolOrCompanyName" name="schoolOrCompanyName"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Job Title -->
                    <div>
                        <label for="jobTitle" class="block text-gray-700 font-semibold mb-2">Job Title</label>
                        <input type="text" id="jobTitle" name="jobTitle"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Specialization -->
                    <div>
                        <label for="specialization"
                            class="block text-gray-700 font-semibold mb-2">Specialization</label>
                        <input type="text" id="specialization" name="specialization"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Profile Picture -->
                    <div>
                        <label for="profilePicture" class="block text-gray-700 font-semibold mb-2">Profile Picture
                            URL</label>
                        <input type="url" id="profilePicture" name="profilePicture"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
                        <input type="email" id="email" name="email"
                            class="w-full border border-gray-300 p-2 rounded-md">
                    </div>

                </div>

                <!-- Biography -->
                <div class="col-span-2">
                    <label for="biography" class="block text-gray-700 font-semibold mb-2 mt-6">Biography</label>
                    <textarea id="biography" name="biography" rows="6"
                        class="w-full border border-gray-300 p-2 rounded-md"></textarea>
                </div>

                <button class="bg-purple-700 text-white px-4 py-2 my-4 rounded" type="submit">Save</button>
            </form>
        </div>
    </div>
</html>