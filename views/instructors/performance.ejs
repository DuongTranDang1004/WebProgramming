<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITLearning Instructor Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-white">

    <div id="content" class="flex flex-1">
        <!-- Include Sidebar Component -->
        <div id="sidebar" class="bg-gray-800 h-screen w-16">
            <ul>
                <li class="mb-6 sidebar-item">
                    <a href="/instructors/home" class="text-white flex items-center">
                        <img src="/img/graduate.png" class="icon" alt="Courses Icon">
                        <span class="text">Courses</span>
                    </a>
                </li>
                <li class="mb-6 sidebar-item">
                    <a href="/instructors/communication" class="text-white flex items-center">
                        <img src="/img/comment.png" class="icon" alt="Communication Icon">
                        <span class="text">Communication</span>
                    </a>
                </li>
                <li class="mb-6 sidebar-item">
                    <a href="/instructors/performance" class="text-white flex items-center">
                        <img src="/img/statistics.png" class="icon" alt="Performance Icon">
                        <span class="text">Performance</span>
                    </a>
                </li>
                <li class="mb-6 sidebar-item">
                    <a href="/instructors/tools" class="text-white flex items-center">
                        <img src="/img/wrench.png" class="icon" alt="Tools Icon">
                        <span class="text">Tools</span>
                    </a>
                </li>
                <li class="mb-6 sidebar-item">
                    <a href="/instructors/resources" class="text-white flex items-center">
                        <img src="/img/question.png" class="icon" alt="Resources Icon">
                        <span class="text">Resources</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Sub Sidebar Component -->
        <div id="sub-sidebar" class="bg-gray-50 h-screen p-5 w-16">
            <ul>
                <li class="mb-6">
                    <a href="#" onclick="showContent('overview')" class="text-black items-center">
                        <span class="text">Overview</span>
                    </a>
                </li>
                <li class="mb-6">
                    <a href="#" onclick="showContent('student')" class="text-grey items-center">
                        <span class="text">Student</span>
                    </a>
                </li>
                <li class="mb-6">
                    <a href="#" onclick="showContent('reviews')" class="text-grey items-center">
                        <span class="text">Review</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-10">
            <div class="content">

                <!-- Overview Section -->
                <div id="overview" class="content-item">
                    <div class="overview-header">
                        <h1>Overview</h1>
                        <p>Get top insights about your performance</p>
                    </div>
                    <div class="overview-container">
                        <div class="overview-cards">
                            <div class="card">
                                <span class="card-label">Total revenue</span>
                                <span id="total-revenue" class="card-value">$0.00</span>
                                <span id="revenue-subtext" class="card-subtext">$0.00 this month</span>
                            </div>
                            <div class="card">
                                <span class="card-label">Total enrollments</span>
                                <span id="total-enrollments" class="card-value">0</span>
                                <span id="enrollments-subtext" class="card-subtext">0 this month</span>
                            </div>
                            <div class="card">
                                <span class="card-label">Commision Rate</span>
                                <span id="instructor-rating" class="card-value">0.00</span>
                                <span id="rating-subtext" class="card-subtext">0 this month</span>
                            </div>
                        </div>
                        <div class="chart-container">
                            <p>No data to display</p>
                        </div>
                        <div class="footer-link">
                            <a href="#">Rating Report</a>
                        </div>
                    </div>
                </div>

                <!-- Student Section -->
                <div id="student" class="content-item hidden">
                    <div class="student-header">
                        <h2>Student</h2>
                    </div>
                    <div class="student-list">
                        <p class="pb-5">No student yet</p>
                        <p class="pb-10">Once you publish your course, come here to learn about your students.</p>
                    </div>
                    <div class="nav-button"><a href="/instructors/home">Go to Instructor Dashboard<a></div>
                </div>

                <!-- Reviews Section -->
                <div id="reviews" class="content-item hidden">
                    <div class="reviews-header">
                        <h2>Reviews</h2>
                        <select>
                            <option>Newest first</option>
                            <option>Oldest first</option>
                        </select>
                    </div>
                    <div class="reviews-list">
                        <p>No reviews found</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>