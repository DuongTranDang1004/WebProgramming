<div class="container">
  <h1>Past Transactions</h1>

  <!-- Search, Sort, and Filter Section -->
  <div class="controls">
    <input
      type="text"
      id="search"
      placeholder="Search transactions..."
      oninput="searchTransactions()"
    />

    <div class="sort-filter">
      <label for="sort">Sort by:</label>
      <select id="sort" onchange="sortTransactions()">
        <option value="time">Time</option>
        <option value="amount">Total Amount</option>
      </select>

      <label for="filter">Filter by Payment Method:</label>
      <select id="filter" onchange="filterTransactions()">
        <option value="all">All</option>
        <option value="credit-card">Credit Card</option>
        <option value="paypal">PayPal</option>
        <option value="bank-transfer">Bank Transfer</option>
      </select>
    </div>
  </div>

  <div class="transaction-list">
    <div class="transaction">
      <div class="transaction-info">
        <p><strong>Transaction ID:</strong> 123456789</p>
        <p><strong>Transaction Time:</strong> August 28, 2024, 12:30 PM</p>
        <p><strong>Total Amount:</strong> $199.98</p>
        <p><strong>Payment Method:</strong> Credit Card</p>
      </div>
      <div class="transaction-items">
        <div class="item">
          <p><strong>Course Name:</strong> Course A</p>
          <p><strong>Price:</strong> $99.99</p>
          <p><strong>Instructor:</strong> Instructor Name A</p>
          <p><strong>Course Access:</strong> Permanent</p>
          <p><strong>Certificate:</strong> $19.99 (Optional)</p>
        </div>
        <div class="item">
          <p><strong>Course Name:</strong> Course B</p>
          <p><strong>Price:</strong> $79.99</p>
          <p><strong>Instructor:</strong> Instructor Name B</p>
          <p><strong>Course Access:</strong> 7 days trial</p>
          <p><strong>Certificate:</strong> $19.99 (Optional)</p>
        </div>
      </div>
    </div>

    <!-- Additional transactions go here -->
  </div>
</div>
