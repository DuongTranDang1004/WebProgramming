<section id="cart-section">
  <div class="cart-container">
    <!-- Cart Items Section -->
    <div class="cart-items">
      <h2>My Cart</h2>
      <div class="cart-item" id="cart-item-list">
        <img
          src="course-thumbnail.jpg"
          alt="Course Thumbnail"
          class="course-thumbnail"
        />
        <div class="item-details">
          <h3>Introduction to Front-End Development</h3>
          <p>Instructor: John Doe</p>
          <p>Category: Web Development</p>
          <p class="price">$99.99</p>
        </div>
        <div class="item-actions">
          <button class="button remove-button">Remove</button>
        </div>
      </div>
    </div>
    <button class="button checkout-button">Begin Checkout</button>
    <!-- Add the missing cart-summary here -->
    <div id="cart-summary" class="summary">
      <!-- The cart summary (total, shipping, etc.) will be dynamically added here -->
    </div>
  </div>
</section>

