<div class="cart-page">
  <div class="cart-container">
    <!-- Cart Items Section -->
    <div class="cart-items">
      <h2>My Cart</h2>
      <div class="cart-item">
        <img
          src="course-thumbnail.jpg"
          alt="Course Thumbnail"
          class="course-thumbnail"
        />
        <div class="item-details">
          <h3>Introduction to Front-End Development</h3>
          <p>Instructor: John Doe</p>
          <p>Category: Web Development</p>
          <p class="price">$99.99</p>
        </div>
        <div class="item-actions">
          <button type="button" class="button">Save for Later</button>
          <button class="button remove-button">Remove</button>
        </div>
      </div>

      <div class="saved-for-later">
        <h3>Saved for Later</h3>
        <p>Stash ideas here, commitment-free!</p>
      </div>
    </div>

    <!-- Cart Summary Section -->
    <aside class="cart-summary">
      <div class="totals">
        <p>Subtotal: <span>$99.99</span></p>
        <p>Shipping: <span>Calculate Above</span></p>
        <p>Sales Tax: <span>Calculate Above</span></p>
        <p>Total: <span>$99.99</span></p>
      </div>

      <button class="button checkout-button">Begin Checkout</button>
    </aside>
  </div>
</div>
